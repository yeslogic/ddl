struct Vec3d : Format {
    x : F32Le,
    y : F32Le,
    z : F32Le,
}

struct Triangle : Format {
    normal : Vec3d,
    vertices : FormatArray 3 Vec3d,
    attribute_byte_count : U16Le,
}

struct Stl : Format {
    header : FormatArray 80 U8,
    triangle_count : U32Le,
    triangles : FormatArray triangle_count Triangle,
}
